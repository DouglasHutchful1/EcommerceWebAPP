@page
@model Ecommerce.Pages.ThankYouModel
@{
    ViewData["Title"] = "Thank You";
}

<div class="container my-5 text-center">
    <h1 class="display-4 fw-bold">Thank You for Your Order!</h1>
    <p class="fs-5 mb-4">We appreciate your business. Your order is being processed and you will receive a confirmation email shortly.</p>
    
    <a class="btn btn-dark rounded-pill btn-lg" href="/Products">Continue Shopping</a>
</div>
<div class="container my-5">
    <h2 class="mb-4">Order Summary</h2>
    <div class="card shadow-sm p-4">
        <h4>Order ID: @Model.OrderId</h4>
        <hr />
        <p>Total Amount: <strong>$@Model.TotalAmount</strong></p>
        <p>Shipping Address: <strong>@Model.ShippingAddress</strong></p>
    </div>

    @section Scripts {
    <script>
        window.onload = function () {
            setTimeout(function () {
                document.getElementById('continueShoppingBtn').classList.remove('d-none');
            }, 2000); 
        };
    </script>
}